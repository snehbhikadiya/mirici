              <hr />
              <h4
                style="font-family: Futura, sans-ser; text-transform: uppercase"
              >
                <%= blogs.titleofcontent3%>
              </h4>
              <div id="metal">
                <%if(blogs.blogimage[2]) { %>
                <img
                  src="<%= blogs.blogimage[2]%>"
                  alt=""
                  height="350"
                  width="300"
                  class="moreinfoimg2"
                />
                  <%}%>
                <p style="padding-left: 10px"><%= blogs.content3%></p>
              </div>
              <button id="closePopup">
                <i class="fa-solid fa-xmark"></i>
              </button>
            </div>
          </div>
        </div>
        <% }); %>

<!-- readmore and popupbox -->
<script>
  // Get all "Read more" links and popups
  const readMoreLinks = document.querySelectorAll("#readmoreblog");
  const popups = document.querySelectorAll("#popupContainer");
  const closeButtons = document.querySelectorAll("#closePopup");

  // Loop through each "Read more" link and assign event listeners with indexing
  readMoreLinks.forEach((link, index) => {
    link.addEventListener("click", function (event) {
      event.preventDefault(); // Prevent default link behavior
      popups[index].style.display = "block"; // Show the corresponding popup
    });
  });

  // Loop through each "Close" button and assign event listeners
  closeButtons.forEach((button, index) => {
    button.addEventListener("click", function () {
      popups[index].style.display = "none"; // Hide the corresponding popup
    });
  });
</script>




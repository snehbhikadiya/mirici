      <div class="blog">
        <% blogs.forEach(function(blogs,index) { %>
        <div class="blogbox">
          <div id="blogdata">
            <% 
            // Check if the media is a video based on the file extension
            const blogg=blogs.blogimage[0];
            const videoExtensions = ['.mp4', '.avi', '.mov', '.mkv', '.webm'];
            const isVideo = videoExtensions.some(ext => blogg.toLowerCase().endsWith(ext));
          %>
          <% if (isVideo) { %>
            <video class="d-block w-100" autoplay muted playsinline loop>
              <source src="<%= blogs.blogimage[0] %>" type="video/mp4" />
              Your browser does not support the video tag.
            </video>
            <% } else { %>
            <img
              src="<%= blogs.blogimage[0]%>"
              alt=""
              height="250"
              width="550"
              id="blogimg1"
            />
            <% } %>
            <p class="bloghading"><%= blogs.bloghading%></p>
            <p class="blogcontent"><%= blogs.blogcontentmainpage.slice(0,35)%>...</p>
            <a href="#" id="readmoreblog" data-index="<%= index%>">Read more</a>
          </div>

          <div id="popupContainer" class="popup">
            <div class="popup-content">
              <h4
                style="font-family: Futura, sans-ser; text-transform: uppercase"
              >
                <%= blogs.titleofcontent1%>
              </h4>
              <div class="content">
                <p><%= blogs.content1%></p>
                <img
                  src="<%= blogs.blogimage[1]%>"
                  alt=""
                  height="300"
                  width="300"

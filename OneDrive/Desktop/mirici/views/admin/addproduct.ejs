const sections = ['trendy','blog', 'ring', 'bracelet', 'pendant', 'necklace', 'earrings'];
let currentIndex = 0;

// Function to scroll to the next section based on the direction (up/down)
function scrollToSection(direction) {
  if (direction === 'up') {
    currentIndex = (currentIndex - 1 + sections.length) % sections.length;
  } else if (direction === 'down') {
    currentIndex = (currentIndex + 1) % sections.length;
  }

  // Scroll to the targeted section smoothly
  document.getElementById(sections[currentIndex]).scrollIntoView({
    behavior: 'smooth',
  });
}


  <body>
    
    <%-include('layout/nav')%>

    <img
      src="/img/contactusicon.png"
      alt="contactus"
      srcset=""
      height="70"
      width="75"
      class="contact-button"
      onclick="window.location.href='/contact'"
    />

    <main>
      <img
        src="/img/nackless/nacklessfullimg.jpg"
        alt="necklace image"
        id="productfullwidthimages"
      />
        <% if(tennisnecklace) {%>
      <div class="product-card">
        <% tennisnecklace.forEach(function(necklaces){%>
        <div class="card">
          <div class="product-image">
            <div
              id="carousel<%= necklaces._id%>"
              class="carousel slide"
              data-bs-touch="false"
            >
              <div class="carousel-inner">
                <% necklaces.necklaceimage.forEach(function(image,index){ %>
                <div class="carousel-item <%= index === 0 ? 'active':'' %>">
                  <% 
                  // Check if the media is a video based on the file extension
                  const videoExtensions = ['.mp4', '.avi', '.mov', '.mkv', '.webm'];
                  const isVideo = videoExtensions.some(ext => image.toLowerCase().endsWith(ext));
                %>
                <% if (isVideo) { %>
                  <!-- Video Tag for Videos -->
                  <a
                  href="#"
                  data-bs-toggle="modal"
                  data-bs-target="#imageModal<%=necklaces._id %>"
                  data-img-src="<%= image%>"
                >
                  <video class="d-block w-100" autoplay muted playsinline loop>
                    <source src="<%= image %>" type="video/mp4" />
                    Your browser does not support the video tag.
                  </video>
                  </a>
                <% } else { %>
                  <a
                    href="#"
                    data-bs-toggle="modal"
                    data-bs-target="#imageModal<%=necklaces._id %>"
                    data-img-src="<%= image%>"
                  >
                    <img
                      src="<%= image%>"
                      class="d-block w-100"
                      alt="..."
                      id="outercarousel"
                    />
                  </a>
                  <% } %>
                
                </div>
                <% })%>
              </div>
              <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#carousel<%= necklaces._id%>"
                data-bs-slide="prev"
              >
                <span
                  class="carousel-control-prev-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#carousel<%= necklaces._id%>"
                data-bs-slide="next"
              >
                <span
                  class="carousel-control-next-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
          <div class="product-details">
            <h2 class="product-name"><%= necklaces.productName%></h2>
            <p class="product-description"><%= necklaces.discription%></p>
            <div class="product-price" id="price-<%= necklaces._id %>"data-price="<%= necklaces.productPrice %>" data-id="<%= necklaces._id %>">&#8377;<%= necklaces.productPrice%>
          </div>
          <%  // Construct product link (assuming a pattern for the URL)
          const productLink = `http://localhost:3000`;
  
          // Ensure the image URL is fully qualified
          const imageUrl = `${necklaces.necklaceimage[0]}`;
  
          // Construct WhatsApp message
          const message = `Hello, I'm interested in the product:\n\nName: ${necklaces.productName}\nPrice: ${necklaces.productPrice}\nLink: ${productLink}\nImage: ${imageUrl}`;
          const phoneNumber = '+1412-886-4544';
          const whatsappURL = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
        %>
        <a href="<%= whatsappURL %>" target="_blank">
          <button class="add-to-cart">
            WhatsApp
            <img src="/img/whatsapp.png" alt="" height="30" width="30" />
          </button>
        </a>
          </div>
        </div>
        <% });%>
        <!-- Modal -->
        <% necklace.forEach(function(necklacedata){%>
        <div
          class="modal fade"
          id="imageModal<%= necklacedata._id%>"
          tabindex="-1"
          aria-labelledby="imageModalLabel<%= necklacedata._id%>"
          aria-hidden="true"
        >
          <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">
                  <%= necklacedata.productName%>
                </h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <div
                  id="carouse2<%= necklacedata._id %>"
                  class="carousel slide"
                  data-bs-touch="false"
                >
                  <div class="carousel-inner">
                    <%
                    necklacedata.necklaceimage.forEach(function(image,index){%>
                    <div
                      class="carousel-item <%= index === 0 ? 'active' : '' %>"
                    >
                    <% 
                    // Check if the media is a video based on the file extension
                    const videoExtensions = ['.mp4', '.avi', '.mov', '.mkv', '.webm'];
                    const isVideo = videoExtensions.some(ext => image.toLowerCase().endsWith(ext));
                  %>
                  <% if (isVideo) { %>
                    <!-- Video Tag for Videos -->
                     
                    <video class="d-block w-100" autoplay muted playsinline loop>
                      <source src="<%= image %>" type="video/mp4" />
                      Your browser does not support the video tag.
                    </video>
                  <% } else { %>
                    <a
                      href="#"
                      data-bs-toggle="modal"
                      data-bs-target="#imageModal<%=necklacedata._id %>"
                      data-img-src="<%= image%>"
                    >
                      <img
                        src="<%= image%>"
                        class="d-block w-100"
                        alt="..."
                        id="outercarousel"
                      />
                    </a>
                    <% } %>
                    </div>
                    <%});%>
                    <button
                      class="carousel-control-prev"
                      type="button"
                      data-bs-target="#carouse2<%= necklacedata._id %>"
                      data-bs-slide="prev"
                    >
                      <span
                        class="carousel-control-prev-icon"
                        aria-hidden="true"
                      ></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button
                      class="carousel-control-next"
                      type="button"
                      data-bs-target="#carouse2<%= necklacedata._id %>"
                      data-bs-slide="next"
                    >
                      <span
                        class="carousel-control-next-icon"
                        aria-hidden="true"
                      ></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                  </div>

                  <div id="importanticon">
                    <div id="brand">
                      <img
                        src="/img/ring/brand.png"
                        alt=""
                        height="60"
                        width="60"
                      />
                      Best Designs
                    </div>
                    <div id="Diamond">
                      <img
                        src="/img/ring/certifidedimond.png"
                        alt=""
                        height="60"
                        width="60"
                      />
                      Certified Diamonds
                    </div>
                    <div id="bis">
                      <img
                        src="/img/ring/bis.png"
                        alt=""
                        height="60"
                        width="60"
                      />
                      Bis Hallmark
                    </div>
                    <div id="return">
                      <img
                        src="/img/ring/return.png"
                        alt=""
                        height="60"
                        width="60"
                      />
                      Easy Exchange
                    </div>
                    <div id="support">
                      <img
                        src="/img/ring/spport.png"
                        alt=""
                        height="60"
                        width="60"
                      />
                      Lifetime Exchange
                    </div>
                    <div id="fast">
                      <img
                        src="/img/ring/fast-delivery.png"
                        alt=""
                        height="60"
                        width="60"
                      />
                      Insured Shipping
                    </div>
                  </div>

                  <div
                    style="
                      font-weight: 400;
                      margin-top: 20px;
                      text-align: center;
                    "
                  >
                    Expected Shipping Date
                    <div style="color: gray; font-size: 16px">
                      Within 7 Days
                    </div>
                  </div>
                </div>

                <div id="infoproduct">
                  <h1 id="producthading"><%= necklacedata.productName %></h1>
                  <hr />
                  <p id="">
                    By <b>GREEN CRAFT JEWELS</b> | Product Code: <%=
                    necklacedata._id %>
                  </p>
                  <p>
                    <a href="" style="text-decoration: none; color: #9e7922"
                      >write your review</a
                    >
                  </p>
                  <p style="color: #7a7a7a">
                    <%= necklacedata.typeofpendant %>
                  </p>
                  <div id="mrp">
                    <span>M.R.P:</span>
                    <span id="fakeamount" id="price-<%= necklacedata._id %>"data-fakeprice="<%= necklacedata.fakemrp %>" data-id="<%= necklacedata._id %>">&#8377;<%= necklacedata.fakemrp %></span>&nbsp; &nbsp; &nbsp;

                    <span id="realprice">
                      <div id="up" id="price-<%= necklacedata._id %>"data-realprice="<%= necklacedata.realmrp %>" data-id="<%= necklacedata._id %>">&#8377;<%= necklacedata.realmrp %></div>
                      <div id="down">(Inclusive of all taxes)</div></span>&nbsp; &nbsp;

                      <span id="yousave">You save
                        <div id="saving" id="price-<%= necklacedata._id %>"data-saveprice="<%= necklacedata.yousave %>" data-id="<%= necklacedata._id %>">&#8377;<%= necklacedata.yousave %>
                        </div></span>

                    <% if(necklacedata.discount){%>
                    <div id="discount" style="font-weight: bolder">
                      <%= necklacedata.discount%>%&nbsp;OFF
                    </div>
                    <%}%>
                  </div>
                  <div id="size">
                    <% if(necklacedata.pendantsize){%>
                    <span>Size</span>
                    <select id="sizeoption" name="Seclect Size">
                      <option value="small">Seclect Size</option>
                      <%if(necklacedata.pendantsize[0]){%>
                      <option value="medium">
                        <%= necklacedata.pendantsize[0] %>
                      </option>
                      <%}%> <%if(necklacedata.pendantsize[1]){%>
                      <option value="medium">
                        <%= necklacedata.pendantsize[1] %>
                      </option>
                      <%}%> <%if(necklacedata.pendantsize[2]){%>
                      <option value="medium">
                        <%= necklacedata.pendantsize[2] %>
                      </option>
                      <%}%> <%if(necklacedata.pendantsize[3]){%>
                      <option value="medium">
                        <%= necklacedata.pendantsize[3] %>
                      </option>
                      <%}%> <%if(necklacedata.pendantsize[4]){%>
                      <option value="medium">
                        <%= necklacedata.pendantsize[4] %>
                      </option>
                      <%}%> <%if(necklacedata.pendantsize[5]){%>
                      <option value="medium">
                        <%= necklacedata.pendantsize[5] %>
                      </option>
                      <%}%> <%if(necklacedata.pendantsize[6]){%>
                      <option value="medium">
                        <%= necklacedata.pendantsize[6] %>
                      </option>
                      <%}%>
                    </select>
                    <%}%>
                    <span id="sizechart"
                      ><a
                        href="/img/chart/pcj-ring-size-guide.pdf"
                        target="_blank"
                        style="
                          text-decoration: none;
                          text-decoration: underline;
                          color: #9e7922;
                        "
                        >Size chart</a
                      ></span
                    >
                  </div>
                  <hr />
                  <div class="price-breakdown-container">
                    <div class="header">
                      <span class="icon">üè∑Ô∏è</span>
                      <span class="toggle">Hide price breakup</span>
                      <span class="minus-icon">‚àí</span>
                    </div>
                    <div class="price-breakdown">
                      <% if (necklacedata.gold) { %>
                        <span>Gold</span>
                      <div class="price-item" data-item="gold" data-price="<%= necklacedata.gold %>">
                        <span class="price">‚Çπ <%= necklacedata.gold %></span>
                      </div>
                      <% } %>
                  
                      <% if (necklacedata.silver) { %>
                        <span>Silver</span>
                      <div class="price-item" data-item="silver" data-price="<%= necklacedata.silver %>">
                        <span class="price">‚Çπ <%= necklacedata.silver %></span>
                      </div>
                      <% } %>
                  
                      <% if (necklacedata.diamond) { %>
                        <span>Diamond / Stone</span>
                      <div class="price-item" data-item="diamond" data-price="<%= necklacedata.diamond %>">
                        <span class="price">‚Çπ <%= necklacedata.diamond %></span>
                      </div>
                      <% } %>
                  
                      <% if (necklacedata.makingcharge) { %>
                        <span>Making Charges</span>
                      <div class="price-item" data-item="makingcharge" data-price="<%= necklacedata.makingcharge %>">
                        <span class="price">‚Çπ <%= necklacedata.makingcharge %></span>
                      </div>
                      <% } %>
                  
                      <% if (necklacedata.gst || necklacedata.gstpersent) { %>
                        <span>GST&nbsp;<%= necklacedata.gstpersent %>%</span>
                      <div class="price-item" data-item="gst" data-price="<%= necklacedata.gst %>">
                        <span class="price">‚Çπ <%= necklacedata.gst %></span>
                      </div>
                      <% } %>
                    </div>
                  </div>
                  
                  <hr />
                  <%  // Construct product link (assuming a pattern for the URL)
                  const productLink = `http://localhost:3000`;
          
                  // Ensure the image URL is fully qualified
                  const imageUrl = `${necklacedata.necklaceimage[0]}`;
          
                  // Construct WhatsApp message
                  const message = `Hello, I'm interested in the product:\n\nName: ${necklacedata.productName}\nPrice: ${necklacedata.productPrice}\nLink: ${productLink}\nImage: ${imageUrl}`;
                  const phoneNumber = '+1412-886-4544';
                  const whatsappURL = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
                %>
                <a href="<%= whatsappURL %>" target="_blank">
                  <button class="add-to-cart">
                    WhatsApp
                    <img src="/img/whatsapp.png" alt="" height="30" width="30" />
                  </button>
                </a>
                  <hr />
                  <div class="toggle-button" onclick="toggleTable()">
                    Product Infomation
                  </div>

                  <table class="toggle-table" id="myTable">
                    <tbody>
                      <tr>
                        <td>Product Code</td>
                        <td>Product Name</td>
                        <td>Brand</td>
                        <td>Height (mm)</td>
                        <td>Width (mm)</td>
                        <td>Bandwidth (mm)</td>
                      </tr>
                      <tr>
                        <td><%= necklacedata._id %></td>
                        <td><%= necklacedata.productName%></td>
                        <td>GREEN CRAFT JEWELS</td>
                        <td><%= necklacedata.productheight%></td>
                        <td><%= necklacedata.productwidth%></td>
                        <td><%= necklacedata.productbandwith%></td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <%});%>
      </div>
    </main>
   
    <center>
      <ul class="pagination container" >
        <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
          <a
            class="page-link"
            href="/tennisnecklace?page=<%= page - 1 %>"
            aria-label="Previous"
          >
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= page === i ? 'active' : '' %>">
          <a class="page-link" href="/tennisnecklace?page=<%= i %>"><%= i %></a>
        </li>
        <% } %>
        <li class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
          <a
            class="page-link"
            href="/tennisnecklace?page=<%= page + 1 %>"
            aria-label="Next"
          >
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </center>
    <% }else { %>
        <h1 style="text-align: center;">Sorry! Nothing Here.....</h1>
      <%}%>


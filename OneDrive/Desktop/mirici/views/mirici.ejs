            >
              <div class="carousel-inner">
                <% trendys.images.forEach(function(image, index) { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                  <% 
                  // Check if the media is a video based on the file extension
                  const videoExtensions = ['.mp4', '.avi', '.mov', '.mkv', '.webm'];
                  const isVideo = videoExtensions.some(ext => image.toLowerCase().endsWith(ext));
                %>
                <% if (isVideo) { %>
                  <!-- Video Tag for Videos -->
                  <video class="d-block w-100" autoplay muted playsinline loop>
                    <source src="<%= image %>" type="video/mp4" />
                    Your browser does not support the video tag.
                  </video>
                <% } else { %>
                  <a href="#"
                    ><img src="<%= image %>" class="d-block w-100" alt="images" id="outercarousel"
                  /></a>
                  <% } %>
                </div>
                <% }); %>
              </div>
              <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#carousel<%= trendys._id %>"
                data-bs-slide="prev"
              >
